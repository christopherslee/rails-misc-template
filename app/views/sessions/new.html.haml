%div#login
  %div.outerbox
    %h1 Log in to Your App
    
    - form_tag session_url do
      %fieldset
        %div.field
          %p
            %label Email Address
            = text_field_tag "email", @email, :class => "text"
        %div.field
          %label Password
          = password_field_tag "password", nil, :class => "text"
        %div.buttons
          = submit_tag "Log in", :class => "button"
